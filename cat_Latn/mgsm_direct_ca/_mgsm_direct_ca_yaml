doc_to_target: '{{answer_number|string}}'
output_type: generate_until
training_split: train
test_split: test
generation_kwargs:
  until:
    - "\n\n"
    - "\n"
    - </s>
    - <|im_end|>
    - "<eos>"
  do_sample: false
  num_beams: 1
  max_new_tokens: 64
filter_list:
  - name: remove_whitespace
    filter:
      - function: remove_whitespace
      - function: take_first
  - name: flexible-extract
    filter:
    - function: regex
      group_select: -1
      regex_pattern: (-?[0-9]+([ .,][0-9.,]+)?)
    - function: take_first
metric_list:
  - metric: exact_match
    aggregation: mean
    higher_is_better: true
    ignore_case: true
    ignore_punctuation: true
    regexes_to_ignore:
      - " "
